# Insider Activity + Hiring Signals System Configuration
# Copy this file to config.yaml and fill in your credentials

# Database Configuration
database:
  host: localhost
  port: 5432
  name: insider_signals
  user: your_db_user
  password: your_db_password

# SEC EDGAR Configuration
sec_edgar:
  user_agent: "Your Name your.email@example.com"
  rate_limit_requests_per_second: 10
  base_url: "https://www.sec.gov"

# AI Configuration (for sentiment analysis)
ai:
  provider: anthropic  # or openai
  anthropic_api_key: your_anthropic_api_key
  openai_api_key: your_openai_api_key
  model: claude-sonnet-4-5-20250929

# Email Configuration
email:
  smtp_server: smtp.gmail.com
  smtp_port: 587
  sender_email: your_email@gmail.com
  sender_password: your_app_password
  recipients:
    - recipient1@example.com
    - recipient2@example.com
  send_daily_digest: true
  digest_time: "07:00"  # 24-hour format

# Scraping Configuration
scraping:
  rate_limit_seconds: 2.0
  max_retries: 3
  timeout_seconds: 30
  use_proxy: false
  proxy_url: ""

# Signal Configuration
signals:
  lookback_days: 90
  min_transaction_value: 50000  # $50K minimum for insider trades
  min_confidence: 0.5
  time_decay_halflife: 30  # days

