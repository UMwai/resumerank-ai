{
  "name": "Investment Orchestration Dev",
  "dockerComposeFile": [
    "../docker/docker-compose.yml",
    "../docker/docker-compose.dev.yml",
    "docker-compose.devcontainer.yml"
  ],
  "service": "devcontainer",
  "workspaceFolder": "/workspace",

  "features": {
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11"
    },
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/git:1": {}
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.black-formatter",
        "ms-python.isort",
        "charliermarsh.ruff",
        "ms-azuretools.vscode-docker",
        "redhat.vscode-yaml",
        "streetsidesoftware.code-spell-checker",
        "eamodio.gitlens",
        "ms-vscode.makefile-tools",
        "tamasfe.even-better-toml",
        "njpwerner.autodocstring",
        "gruntfuggly.todo-tree"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.linting.enabled": true,
        "python.formatting.provider": "none",
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "ms-python.black-formatter",
        "[python]": {
          "editor.defaultFormatter": "ms-python.black-formatter",
          "editor.formatOnSave": true,
          "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
          }
        },
        "python.analysis.typeCheckingMode": "basic",
        "python.analysis.autoImportCompletions": true,
        "terminal.integrated.defaultProfile.linux": "bash",
        "files.exclude": {
          "**/__pycache__": true,
          "**/.pytest_cache": true,
          "**/*.pyc": true
        }
      }
    }
  },

  "forwardPorts": [
    8080,
    3000,
    9090,
    9091,
    5432
  ],

  "portsAttributes": {
    "8080": {
      "label": "Airflow",
      "onAutoForward": "notify"
    },
    "3000": {
      "label": "Grafana",
      "onAutoForward": "notify"
    },
    "9090": {
      "label": "Prometheus",
      "onAutoForward": "silent"
    },
    "9091": {
      "label": "Health Check",
      "onAutoForward": "silent"
    },
    "5432": {
      "label": "PostgreSQL",
      "onAutoForward": "silent"
    }
  },

  "postCreateCommand": "pip install -e /workspace && pip install pytest pytest-cov black isort ruff",

  "postStartCommand": "echo 'Development environment ready! Airflow: http://localhost:8080 (admin/admin)'",

  "remoteEnv": {
    "PYTHONPATH": "/workspace:/workspace/orchestration",
    "PROJECT_ROOT": "/workspace",
    "ORCHESTRATION_ENV": "dev"
  },

  "mounts": [
    "source=${localWorkspaceFolder}/..,target=/workspace,type=bind,consistency=cached"
  ],

  "containerEnv": {
    "PYTHONDONTWRITEBYTECODE": "1",
    "PYTHONUNBUFFERED": "1"
  }
}
