# Investment Signals Orchestration - Environment Configuration
#
# Copy this file to .env and fill in the values for your environment.
# NEVER commit .env files with real credentials to version control.

# =============================================================================
# ENVIRONMENT
# =============================================================================
# Environment: dev, staging, production
ORCHESTRATION_ENV=dev

# Project root path
PROJECT_ROOT=/Users/waiyang/Desktop/repo/dreamers-v2

# =============================================================================
# DATABASE
# =============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=investment_signals
DB_USER=signals
DB_PASSWORD=your_secure_password_here

# Full connection string (alternative to individual settings)
# DATABASE_URL=postgresql://signals:password@localhost:5432/investment_signals

# =============================================================================
# AIRFLOW
# =============================================================================
AIRFLOW_UID=50000
AIRFLOW_GID=0

# Airflow Admin User
_AIRFLOW_WWW_USER_USERNAME=admin
_AIRFLOW_WWW_USER_PASSWORD=admin_password_change_me

# Airflow Webserver
AIRFLOW_WEBSERVER_URL=http://localhost:8080

# =============================================================================
# EMAIL ALERTS
# =============================================================================
EMAIL_ALERTS_ENABLED=false

# SMTP Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Email Settings
EMAIL_FROM=Investment Signals <your_email@gmail.com>
ALERT_EMAIL_RECIPIENTS=user1@example.com,user2@example.com

# High-confidence alert threshold (0-10)
EMAIL_HIGH_CONFIDENCE_THRESHOLD=7.0

# =============================================================================
# SLACK ALERTS
# =============================================================================
SLACK_ALERTS_ENABLED=false

# Slack Webhook (create at https://api.slack.com/messaging/webhooks)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_CHANNEL=#investment-signals

# Users to mention for high-priority alerts (Slack user IDs)
SLACK_MENTION_USERS=U12345678,U87654321

# =============================================================================
# SMS ALERTS (TWILIO)
# =============================================================================
SMS_ALERTS_ENABLED=false
SMS_CRITICAL_ONLY=true

# Twilio Configuration (get from https://console.twilio.com)
TWILIO_ACCOUNT_SID=your_account_sid
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_FROM_NUMBER=+1234567890

# Recipients (E.164 format)
SMS_RECIPIENTS=+1234567890,+0987654321

# =============================================================================
# ALERT SETTINGS
# =============================================================================
# Deduplication window in hours (same signal won't alert twice within this window)
ALERT_DEDUP_WINDOW_HOURS=24

# =============================================================================
# AWS CONFIGURATION (if using AWS)
# =============================================================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_S3_BUCKET=investment-signals-bucket

# =============================================================================
# GCP CONFIGURATION (if using GCP)
# =============================================================================
GCP_PROJECT_ID=your-project-id
GCP_SERVICE_ACCOUNT_KEY=/path/to/service-account-key.json
GCP_STORAGE_BUCKET=investment-signals-bucket

# =============================================================================
# MONITORING
# =============================================================================
# Metrics port for Prometheus scraping
METRICS_PORT=9090

# Health check service port
HEALTH_CHECK_PORT=9091

# Data freshness threshold (hours)
DATA_FRESHNESS_THRESHOLD_HOURS=24

# Cost tracking
COST_TRACKING_ENABLED=false
COST_ALERT_THRESHOLD_DAILY=50.0
COST_ALERT_THRESHOLD_MONTHLY=1000.0

# =============================================================================
# API RATE LIMITS
# =============================================================================
SEC_EDGAR_REQUESTS_PER_SECOND=10.0
CLINICALTRIALS_REQUESTS_PER_SECOND=3.0
USPTO_REQUESTS_PER_SECOND=5.0

# =============================================================================
# GRAFANA (if using Docker Compose)
# =============================================================================
GF_ADMIN_USER=admin
GF_ADMIN_PASSWORD=admin_password_change_me

# =============================================================================
# REDIS (for Celery)
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
# REDIS_PASSWORD=your_redis_password
