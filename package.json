{
  "name": "resumerank-ai",
  "version": "0.1.0",
  "description": "AI-powered resume screening API for staffing agencies",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio"
  },
  "keywords": ["ai", "resume", "screening", "recruiting", "staffing", "hr-tech"],
  "author": "ResumeRank AI",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.32.1",
    "@google/generative-ai": "^0.21.0",
    "@hono/node-server": "^1.13.7",
    "@hono/zod-validator": "^0.4.1",
    "drizzle-orm": "^0.36.4",
    "hono": "^4.6.14",
    "mammoth": "^1.8.0",
    "openai": "^4.77.3",
    "pdf-parse": "^1.1.1",
    "postgres": "^3.4.5",
    "zod": "^3.23.8",
    "stripe": "^17.5.0",
    "bullmq": "^5.24.3",
    "ioredis": "^5.4.1",
    "@aws-sdk/client-s3": "^3.709.0",
    "@aws-sdk/s3-request-presigner": "^3.709.0",
    "bcrypt": "^5.1.1",
    "nanoid": "^5.0.9"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/pdf-parse": "^1.1.4",
    "@types/bcrypt": "^5.0.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8",
    "eslint": "^9.17.0",
    "prettier": "^3.4.2",
    "drizzle-kit": "^0.29.1"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
